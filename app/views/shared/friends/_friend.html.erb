<div class="col-md-6">
  <div class="profile profile-bordered">
    <div class="profile-center">

      <div class="profile-img pull-left">
        <a href="#">
          <img src="https://s3.amazonaws.com/viking_education/web_development/web_app_eng/user_silhouette_generic.gif" alt="">
          </a></div>


      <div class="profile-info pull-left">

        <%= link_to format_user_name(user), user_profile_path(user, user.profile) %>

        <p class="muted">432 Friends</p>
      </div>
      <% if current_user.friend_ids.include?(user.id) %>
        <%= link_to "Unfriend", user_friends_path(user), method: :delete, class: "btn btn-default pull-right unfriend" %>
      <% elsif current_user.id != user.id %>
        <%= link_to "+Friend", user_friends_path(user), method: :post, class: "btn btn-default pull-right friend" %>
      <% end %>
      <div class="clearfix"></div>
    </div>


  </div>
</div>
