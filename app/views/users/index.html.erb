<%= content_for :usernav, true %>
<div class="col-xs-12">

  <div class="row">
    <div class="col-sm-5 col-md-4 right-gutter hidden-xs">
      <%= render partial: 'shared/timeline_sidebar' %>
    </div>

    <div class="col-sm-7 col-md-8">

      <div class="row">

        <section class="post post-small col-xs-12">
          <div class="row">
            <header class="post-header col-xs-12">
              <p>Post</p>
            </header>
          </div>

          <%= form_for [current_user, @post], html: {class: "form-horizontal"} do |f| %>
          <div class="row">
            <section class="post-content col-xs-12">
              <%= f.label :body, "Tell the world something", class: "sr-only" %>
              <%= f.text_area :body, class: "form-control", rows: 3, placeholder: "Tell the world something..." %>
            </section>
          </div>

          <div class="row">
            <section class="post-footer col-xs-12">
              <button type="submit" class="btn btn-primary pull-right">Post</button>
              <div class="clearfix"></div>
            </section>
          </div>
          <% end %>

        </section>

      </div>
      <% @posts.each do |post| %>
        <div class="row">
          <%= render partial: 'shared/posts/post', locals: { user: post.user, post: post, size: "small"} %>
        </div>
      <% end %>
    </div>

  </div>
</div>
